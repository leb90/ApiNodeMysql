doctype html
html(lang="es")
  head
    title= pageTitle
    h1= title
    p Welcome to #{title}
    form(method="POST",action="../../clientEdit")
        label(for="username") Nombre
        input(type="text",name="username",value='#{info[0].username}')
        br
        label(for="email") Email
        input(type="text",name="email",value="#{info[0].email}")
        br
        label(for="password") Password
        input(type="text",name="password",value="#{info[0].password}")
        br
        input(type="hidden", name="_method", value="PUT")
        input(type="hidden",name="id",value="#{info[0].id}")
        br
        input(type="submit",value="Enviar")